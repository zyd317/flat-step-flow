{
  "compilerOptions": {
    "outDir"       : "ts-build",
    "sourceMap"    : true,
    "noImplicitAny": true,
    "module"       : "commonjs",
    "target"       : "es5",
    "lib"          : [ "es2015", "dom" ],
    "esModuleInterop"             : true,
    "allowSyntheticDefaultImports": true,
    // This must be specified if "paths" is set
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./test/*", "./index.d.ts"]
}
